<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence" 
        version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    
    <persistence-unit name="TrainingManagementPU" transaction-type="RESOURCE_LOCAL">
        
        <class>br.com.cavy.training.management.model.Address</class>
        <class>br.com.cavy.training.management.model.Athlete</class>
        <class>br.com.cavy.training.management.model.DayTraining</class>
        <class>br.com.cavy.training.management.model.Exercise</class>
		<class>br.com.cavy.training.management.model.Training</class>
		<class>br.com.cavy.training.management.model.PlanOwner</class>
        
        <properties>
            <property name="eclipselink.target-database" value="org.eclipse.persistence.nosql.adapters.mongo.MongoPlatform"/>
            <property name="eclipselink.nosql.connection-spec" value="org.eclipse.persistence.nosql.adapters.mongo.MongoConnectionSpec"/>
            <property name="eclipselink.nosql.property.mongo.port" value="27017"/>
            <property name="eclipselink.nosql.property.mongo.host" value="localhost"/>
            <property name="eclipselink.nosql.property.mongo.db" value="training-management"/>
            <property name="eclipselink.logging.level" value="OFF"/>
        </properties>
        
    </persistence-unit>
    
</persistence>